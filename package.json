{
  "name": "@vkbansal/tsx-control-statements",
  "version": "1.0.0",
  "author": "Vivek Kumar Bansal <vkb0310@gmail.com>",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "esnext": "./esnext/index.js",
  "scripts": {
    "release": "standard-version",
    "test": "jest src",
    "lint": "eslint --ext .ts --ext .jsx src",
    "fmtc": "prettier --check 'src/**/*.{ts,tsx}'",
    "build": "yarn run build:esm && yarn run build:cjs && yarn run build:esnext",
    "build:esm": "rimraf ./esm && tsc --project tsconfig.build.json --target es5 --module es6 --outDir ./esm",
    "build:cjs": "rimraf ./lib && tsc --project tsconfig.build.json --target es5 --module commonjs --outDir ./lib",
    "build:esnext": "rimraf ./esnext && tsc --project tsconfig.build.json --target es6 --module es6 --outDir ./esnext",
    "prepublishOnly": "yarn run build",
    "preversion": "yarn lint && yarn prettier && yarn test"
  },
  "files": [
    "ems",
    "esnext",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@types/react": ">=17.0.0",
    "react": ">=17.0.0",
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.17",
    "@types/node": "^14.14.10",
    "@types/prettier": "^2.1.5",
    "@types/react": "~17.0.0",
    "@typescript-eslint/eslint-plugin": "~4.9.1",
    "@typescript-eslint/parser": "~4.9.1",
    "eslint": "~7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-prettier-config": "~1.0.1",
    "husky": "^4.3.5",
    "jest": "~26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "~2.2.1",
    "react": "~17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "~26.4.4",
    "typescript": "~4.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --check",
      "sh tools/typecheck-staged.sh"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./tools/lint-commit-message.js \"$(cat $HUSKY_GIT_PARAMS)\""
    }
  }
}
